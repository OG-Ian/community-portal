<%- include('../partials/header') %>

<section class="mb-4">
  <h2 class="mb-3"><%= event.title %></h2>
  <img src="<%= event.image %>" alt="<%= event.title %>" class="img-fluid mb-3">
  <p><strong>Date:</strong> <%= event.date %></p>
  <p><strong>Time:</strong> <%= event.time %></p>
  <p><strong>Location:</strong> <%= event.location %></p>
  <p><strong>Description:</strong> <%= event.description %></p>
  <p><strong>Details:</strong> <%= event.details %></p>
  <p><strong>Rules of Event:</strong> <%= event.rules %></p>
  <p><strong>What to bring:</strong> <%= event.bring %></p>
  <p><strong>Wheelchair accessible:</strong> <%= event.accessibility %></p>
  <p><strong>Weather:</strong> <%= event.weather %></p>
  <p><strong>Dress Code:</strong> <%= event.dress %></p>
  <p><strong>Parking:</strong> <%= event.parking %></p>
  <p><strong>Food:</strong> <%= event.food %></p>

  <div class="d-flex justify-content-between mt-4">
    <% if (prevIndex !== null) { %>
      <a class="btn btn-outline-secondary" href="/events/<%= prevIndex %>">← Previous</a>
    <% } else { %>
      <span></span>
    <% } %>

    <% if (nextIndex !== null) { %>
      <a class="btn btn-outline-primary" href="/events/<%= nextIndex %>">Next →</a>
    <% } %>
  </div>
</section>

<%- include('../partials/footer') %>
