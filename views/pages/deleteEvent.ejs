<%- include('../partials/header') %>

<div class="container py-5">
  <h2 class="text-center mb-4">Delete Event</h2>

  <% if (typeof message !== 'undefined') { %>
    <div class="alert <%= success ? 'alert-success' : 'alert-danger' %> text-center">
      <%= message %>
    </div>
  <% } %>

  <form action="/delete-event" method="POST" class="mx-auto" style="max-width: 600px;">
    <div class="mb-3">
      <label class="form-label">Select Event to Delete</label>
      <select name="title" class="form-select" required>
        <option value="">Choose an event</option>
        <% events.forEach(event => { %>
          <option value="<%= event.title %>"><%= event.title %></option>
        <% }); %>
      </select>
    </div>
    <div class="mb-3">
      <label class="form-label">Developer Code</label>
      <input type="text" name="code" class="form-control" placeholder="Developer Code" required>
    </div>
    <div class="text-end">
      <button type="submit" class="btn btn-danger">Delete Event</button>
    </div>
  </form>
</div>

<%- include('../partials/footer') %>
